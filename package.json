{
  "name": "ngx-drag-drop-kit",
  "version": "3.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open --port=8545",
    "build": "ng build --project=demo",
    "buildDemo": "ng build demo --base-href /ngx-drag-drop-kit/  --output-path ./docs",
    "link:lib": "cd dist/ngx-drag-drop-kit && npm link",
    "link:app": "cd projects/sandbox && npm link ngx-drag-drop-kit",
    "link:all": "npm run link:lib && npm run link:app",
    "link:rm": "npm rm -g ngx-drag-drop-kit",
    "sandbox:ng-add": "cd projects/sandbox && ng g ngx-drag-drop-kit:ng-add",
    "clean:sandbox": "git checkout HEAD -- projects/sandbox && git clean -f -d projects/sandbox",
    "build:sass": "sass projects/ngx-drag-drop-kit/styles.scss projects/ngx-drag-drop-kit/assets/styles.css",
    "build:lib": "npm run build:sass && ng build ngx-drag-drop-kit",
    "build:schematics": "tsc -p projects/ngx-drag-drop-kit/tsconfig.schematics.json",
    "postbuild:schematics": "copyfiles projects/ngx-drag-drop-kit/schematics/migrations.json projects/ngx-drag-drop-kit/schematics/collection.json dist/ngx-drag-drop-kit/schematics/ -f",
    "build:all": "npm run build:sass && npm run build:lib && npm run build:schematics",
    "pack:lib": "cd dist/ngx-drag-drop-kit && npm pack",
    "lib:all": "npm run build:all && npm run pack:lib",
    "publish:all": "npm run lib:all && npm publish dist/ngx-drag-drop-kit",
    "publish:beta": "npm run lib:all && npm publish --tag beta dist/ngx-drag-drop-kit",
    "publish:local": "npm run lib:all && npm publish dist/ngx-drag-drop-kit --registry http://localhost:4873",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test-headless": "ng test --no-watch --no-progress --browsers=ChromeHeadless --project=ngx-drag-drop-kit",
    "test-covrage": "ng test --no-watch --code-coverage  --no-progress --browsers=ChromeHeadless --project=ngx-drag-drop-kit",
    "forng updatemat": "prettier --write \".//projects//**//*.{ts,html,css,scss}\" "
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.15",
    "@angular/common": "^19.2.15",
    "@angular/compiler": "^19.2.15",
    "@angular/core": "^19.2.15",
    "@angular/forms": "^19.2.15",
    "@angular/platform-browser": "^19.2.15",
    "@angular/platform-browser-dynamic": "^19.2.15",
    "@angular/router": "^19.2.15",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.15",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.2",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  }
}
